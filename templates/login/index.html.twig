{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body_id %}login{% endblock %}

{% block body %}

    <div class="container">

        <div class="mt-4">
            {% embed "embed/alert.html.twig" %}{% endembed %}
        </div>

        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <div class="d-flex">
                        <div class="w-100">
                            <h3 class="mb-4">Sign in</h3>
                        </div>
                    </div>
                    <form action="{{ path('app_login') }}" method="post">
                        <div class="form-group mt-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="_username">
                        </div>
                        <div class="form-group mt-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="_password">
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="form-control btn btn-primary rounded px-3">Login</button>
                        </div>
                        <div class="form-group d-md-flex mt-3">
                            <div class="w-50 text-left">
                                <a href="/register">Register</a>
                            </div>
                            <div class="w-50 text-md-right">
                                <a href="#">Forgot Password</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
