<div class="comment d-flex flex-row p-3" data-comment-id="{{ comment.getId() }}">
    <img src="/{{ uploads_url }}/users/{{ comment.getUser().getProfilPicture() }}" width="40" height="40" class="rounded-circle mr-3">
    <div class="w-75">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex flex-row align-items-center">
                <span class="mr-2">{{ comment.getUser().getUsername() }}</span>
            </div>
            <small>{{ comment.getDateAdd()|date('d/m/Y') }}</small>
        </div>
        <p class="text-justify comment-text mb-0">{{ comment.getMessage() }}</p>
    </div>
</div>
