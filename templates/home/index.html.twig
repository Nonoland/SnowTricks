{% extends 'base.html.twig' %}

{% block title %}SnowTrick | Home{% endblock %}

{% block body %}
    <div style="" class="position-relative w-100 hero">
        <div class="position-absolute text-white d-flex flex-column align-items-center justify-content-center" style="top: 0; right: 0; bottom: 0; left: 0; background-color: rgba(0,0,0,.6);">
            <span>SnowTricks</span>
            <h1 class="mb-4 mt-2 font-weight-bold text-center">Encyclopaedia of snowboard tricks</h1>
            <div class="text-center">
                <a href="#" id="filled" class="btn px-5 py-3 text-white mt-3 mt-sm-0 mx-1" style="border-radius: 30px; background-color: #9B5DE5;">See tricks</a>
                <a href="#" id="outlined" class="btn px-5 py-3 text-white mt-3 mt-sm-0 mx-1" style="border-radius: 30px; border:1px solid #9B5DE5;">Sign in</a>
            </div>
        </div>
    </div>

    <div class="container tricks_list">

        <div class="text-center mb-4">
            <a href="{{ path('app_trick_new') }}" class="btn btn-success">Add new trick</a>
        </div>

        <div class="row">
            {% for trick in tricks %}
                <div class="col mb-4">
                    {% embed "embed/card_trick.html.twig" %}{% endembed %}
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}
