{% extends 'base.html.twig' %}

{% block title %}Account{% endblock %}

{% block body_id %}account{% endblock %}

{% block body %}

    <div class="container">

        <div class="mt-4">
            {% embed "embed/alert.html.twig" %}{% endembed %}
        </div>

        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <div class="d-flex">
                        <div class="w-100">
                            <h2 class="mb-4">Account</h2>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="w-100">
                            <h4>Current profile picture</h4>
                            <img class="profile_picture" src="uploads/users/{{ user_profile_picture }}" alt="Profile picture">
                        </div>
                    </div>
                    {{ form_start(form) }}
                    {{ form_row(form.profil_picture) }}
                    {{ form_row(form.submit) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
